{
  "name": "imagion-extension",
  "version": "0.1.0",
  "description": "Imagion browser extension - AI-generated image detection",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx scripts/build.ts && tsx watch scripts/build.ts",
    "build": "tsx scripts/build.ts",
    "build:prod": "NODE_ENV=production tsx scripts/build.ts",
    "watch": "nodemon --watch src --ext ts --exec \"npm run build\"",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/chrome": "^0.0.287",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
