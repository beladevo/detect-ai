{
  "manifest_version": 2,
  "name": "Imagion Image Detector",
  "description": "Annotates images with Imagion's AI detection verdict while you browse.",
  "version": "0.1.0",
  "icons": {
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "notifications",
    "alarms",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.svg"
    },
    "default_title": "Imagion AI detection",
    "default_popup": "popup.html"
  },
  "commands": {
    "toggle-badges": {
      "suggested_key": {
        "default": "Ctrl+Shift+I"
      },
      "description": "Toggle badge overlays on/off"
    },
    "scan-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Re-scan current page for images"
    }
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "imagion@imagion.ai",
      "strict_min_version": "109.0"
    }
  }
}
